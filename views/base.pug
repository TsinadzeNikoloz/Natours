        include _header

        // MAIN
        block content
            h1 This is a placeholder heading
        
        // FOOTER
        include _footer

        
        //- Axios CDN
        script(defer src="https://unpkg.com/axios/dist/axios.min.js")

        //- Your custom JS
        script(defer src='/js/mapbox.js')
        script(type="module" src="/js/login.js")
        script(type="module" src="/js/updateSettings.js")
